<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VoiceRecognizer.HomePage"
             Title="HOME">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Frame BackgroundColor="#47A6D4" CornerRadius="15">
                <StackLayout>
                    <Label HorizontalOptions="Center" Text="BENVENUTO, inserisci il nome con cui vuoi esser riconosciuto" TextColor="White" FontSize="Large"></Label>
                    <Entry x:Name="EntryUsername" Placeholder="Inserisci nome" VerticalOptions="Center" HorizontalOptions="Center" TextColor="White" PlaceholderColor="#E5F3FF" FontSize="Large"></Entry>
                    <Button Text="Inizio riconoscimento vocale" Clicked="AvvioSecondaPagina" BackgroundColor="#437BCA" TextColor="White" CornerRadius="10"></Button>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>