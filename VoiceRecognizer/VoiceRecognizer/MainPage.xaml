<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:VoiceRecognizer"
             x:Class="VoiceRecognizer.MainPage">

    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Valore inserito:" FontSize="Medium" TextColor="Black" VerticalOptions="Center"></Label>
            <Label x:Name="txtResult" FontSize="Large" VerticalOptions="Center"></Label>
        </StackLayout>
        <StackLayout Orientation="Horizontal" >
            <Label Text="Temperatura:" FontSize="Medium" TextColor="Black" VerticalOptions="Center"></Label>
            <Label x:Name="lblTemperatura" FontSize="Large" VerticalOptions="Center"></Label>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Pressione sanguigna:" FontSize="Medium" TextColor="Black" VerticalOptions="Center"></Label>
            <Label x:Name="lblPressione" FontSize="Large" VerticalOptions="Center"></Label>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Battiti:" FontSize="Medium" VerticalOptions="Center" TextColor="Black"></Label>
            <Label x:Name="lblBattito" FontSize="Large" VerticalOptions="Center"></Label>
        </StackLayout>
    </StackLayout>

</ContentPage>
